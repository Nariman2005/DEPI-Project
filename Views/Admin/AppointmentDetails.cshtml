@model WebApplication1.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-calendar-check"></i> Appointment Details
        </h1>
        <a href="@Url.Action("Appointments", "Admin")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Appointments
        </a>
    </div>

    <!-- Status Badge -->
    <div class="mb-3">
        @{
            var status = Model.Status.ToString();
        }
        @if (status == "Scheduled")
        {
            <span class="badge bg-warning text-dark fs-6">
                <i class="fas fa-clock"></i> Scheduled
            </span>
        }
        else if (status == "Completed")
        {
            <span class="badge bg-success fs-6">
                <i class="fas fa-check-circle"></i> Completed
            </span>
        }
        else if (status == "Cancelled")
        {
            <span class="badge bg-danger fs-6">
                <i class="fas fa-times-circle"></i> Cancelled
            </span>
        }
        else if (status == "NoShow")
        {
            <span class="badge bg-secondary fs-6">
                <i class="fas fa-user-slash"></i> No Show
            </span>
        }
        else
        {
            <span class="badge bg-secondary fs-6">@status</span>
        }
    </div>

    <div class="row">
        <!-- Appointment Information -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Appointment Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Appointment ID:</th>
                            <td>@Model.AppointmentId</td>
                        </tr>
                        <tr>
                            <th>Date & Time:</th>
                            <td><strong>@Model.AppointmentDate.ToString("dddd, dd MMMM yyyy, hh:mm tt")</strong></td>
                        </tr>
                        <tr>
                            <th>Type:</th>
                            <td>
                                @if (Model.Type.ToString() == "InPerson")
                                {
                                    <span class="badge bg-primary">In-Person</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">Online</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @if (status == "Scheduled")
                                {
                                    <span class="badge bg-warning text-dark">Scheduled</span>
                                }
                                else if (status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else if (status == "Cancelled")
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else if (status == "NoShow")
                                {
                                    <span class="badge bg-secondary">No Show</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@status</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Fee:</th>
                            <td>
                                @if (Model.Fee > 0)
                                {
                                    <strong class="text-success">@Model.Fee.ToString("C")</strong>
                                }
                                else
                                {
                                    <span class="text-muted">Free</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Patient & Doctor Information -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Patient & Doctor</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-primary mb-3"><i class="fas fa-user"></i> Patient Information</h6>
                    @if (Model.Patient != null)
                    {
                        <table class="table table-borderless table-sm">
                            <tr>
                                <th width="40%">Patient ID:</th>
                                <td>@Model.PatientId</td>
                            </tr>
                            <tr>
                                <th>Name:</th>
                                <td>@Model.Patient.FirstName @Model.Patient.LastName</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Patient.Email</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>@Model.Patient.PhoneNumber</td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No patient information available</p>
                    }

                    <hr class="my-3" />

                    <h6 class="text-success mb-3"><i class="fas fa-user-md"></i> Doctor Information</h6>
                    @if (Model.Doctor != null)
                    {
                        <table class="table table-borderless table-sm">
                            <tr>
                                <th width="40%">Doctor ID:</th>
                                <td>@Model.DoctorId</td>
                            </tr>
                            <tr>
                                <th>Name:</th>
                                <td>Dr. @Model.Doctor.FirstName @Model.Doctor.LastName</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Doctor.Email</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>@Model.Doctor.PhoneNumber</td>
                            </tr>
                            <tr>
                                <th>Specialization:</th>
                                <td><strong>@Model.Doctor.Specialization</strong></td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No doctor information available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Clinic Information (if available) -->
    @if (Model.Clinic != null)
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-hospital"></i> Clinic Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <strong>Clinic ID:</strong> @Model.Clinic.ClinicId
                    </div>
                    <div class="col-md-4">
                        <strong>Address:</strong> @(Model.Clinic.Address ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Phone:</strong> @(Model.Clinic.PhoneNumber ?? "N/A")
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3"><i class="fas fa-cogs"></i> Actions</h5>
            <div class="d-flex gap-2 flex-wrap">
                @if (Model.Status.ToString() == "Scheduled")
                {
                    <button type="button"
                            class="btn btn-warning"
                            onclick="confirmCancel(@Model.AppointmentId)">
                        <i class="fas fa-ban"></i> Cancel Appointment
                    </button>
                }
                <button type="button"
                        class="btn btn-danger"
                        onclick="confirmDelete(@Model.AppointmentId)">
                    <i class="fas fa-trash"></i> Delete Appointment
                </button>
                @if (Model.Patient != null)
                {
                    <a href="@Url.Action("PatientDetails", new { id = Model.PatientId })"
                       class="btn btn-info">
                        <i class="fas fa-user"></i> View Patient Profile
                    </a>
                }
                @if (Model.Doctor != null)
                {
                    <a href="@Url.Action("DoctorDetails", new { id = Model.DoctorId })"
                       class="btn btn-success">
                        <i class="fas fa-user-md"></i> View Doctor Profile
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Hidden Forms -->
<form id="cancelForm" method="post" action="@Url.Action("CancelAppointment", "Admin")" style="display: none;">
    <input type="hidden" id="cancelId" name="id" />
</form>

<form id="deleteForm" method="post" action="@Url.Action("DeleteAppointment", "Admin")" style="display: none;">
    <input type="hidden" id="deleteId" name="id" />
</form>

<script>
    function confirmCancel(id) {
        if (confirm('Are you sure you want to cancel this appointment?')) {
            document.getElementById('cancelId').value = id;
            document.getElementById('cancelForm').submit();
        }
    }

    function confirmDelete(id) {
        if (confirm('Are you sure you want to delete this appointment? This action cannot be undone.')) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteForm').submit();
        }
    }
</script>
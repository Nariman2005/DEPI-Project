@model WebApplication1.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-user-md"></i> Doctor Details
        </h1>
        <a href="@Url.Action("Doctors", "Admin")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Doctors
        </a>
    </div>

    <!-- Status Badge -->
    <div class="mb-3">
        @if (Model.IsConfirmed == WebApplication1.Models.ConfirmationStatus.Confirmed)
        {
            <span class="badge bg-success fs-6">
                <i class="fas fa-check-circle"></i> Confirmed
            </span>
        }
        else if (Model.IsConfirmed == WebApplication1.Models.ConfirmationStatus.Pending)
        {
            <span class="badge bg-warning text-dark fs-6">
                <i class="fas fa-clock"></i> Pending Approval
            </span>
        }
        else if (Model.IsConfirmed == WebApplication1.Models.ConfirmationStatus.Rejected)
        {
            <span class="badge bg-danger fs-6">
                <i class="fas fa-times-circle"></i> Rejected
            </span>
        }
    </div>

    <div class="row">
        <!-- Personal Information -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-circle"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Doctor ID:</th>
                            <td>@Model.DoctorId</td>
                        </tr>
                        <tr>
                            <th>Full Name:</th>
                            <td>Dr. @Model.FirstName @Model.LastName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Phone Number:</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Age:</th>
                            <td>@Model.Age years</td>
                        </tr>
                        <tr>
                            <th>Gender:</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>@(Model.Address ?? "N/A")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Professional Information -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-briefcase"></i> Professional Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Specialization:</th>
                            <td><strong>@Model.Specialization</strong></td>
                        </tr>
                        <tr>
                            <th>Experience:</th>
                            <td>@Model.ExperienceYears years</td>
                        </tr>
                        <tr>
                            <th>License Number:</th>
                            <td>@Model.LicenseNumber</td>
                        </tr>
                        <tr>
                            <th>Consultation Fee:</th>
                            <td>@Model.ConsultationFee.ToString("C")</td>
                        </tr>
                        <tr>
                            <th>Online Fee:</th>
                            <td>@Model.OnlineFee.ToString("C")</td>
                        </tr>
                        <tr>
                            <th>Video Consultations:</th>
                            <td>
                                @if (Model.AvailableForVideo)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not Available</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>About:</th>
                            <td>@(Model.About ?? "No information provided")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Schedule Information -->
    @if (ViewBag.Schedule != null)
    {
        var schedule = (WebApplication1.Models.Schedule)ViewBag.Schedule;
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Schedule</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>Day:</strong> @schedule.DayOfWeek
                    </div>
                    <div class="col-md-3">
                        <strong>Start Time:</strong> @schedule.Starttime
                    </div>
                    <div class="col-md-3">
                        <strong>End Time:</strong> @schedule.Endtime
                    </div>
                    <div class="col-md-3">
                        <strong>Max Patients/Day:</strong> @schedule.MaxPatientPerDay
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mb-4">
            <i class="fas fa-exclamation-triangle"></i> No schedule set for this doctor yet.
        </div>
    }

    <!-- Appointments History -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Appointments History</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.Appointments != null && ((List<WebApplication1.Models.Appointment>)ViewBag.Appointments).Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Appointment ID</th>
                                <th>Patient ID</th>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Fee</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in (List<WebApplication1.Models.Appointment>)ViewBag.Appointments)
                            {
                                <tr>
                                    <td>@appointment.AppointmentId</td>
                                    <td>@appointment.PatientId</td>
                                    <td>@appointment.AppointmentDate.ToString("dd MMM yyyy, hh:mm tt")</td>
                                    <td>
                                        @if (appointment.Type.ToString() == "InPerson")
                                        {
                                            <span class="badge bg-primary">In-Person</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Online</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var status = appointment.Status.ToString();
                                        }
                                        @if (status == "Scheduled")
                                        {
                                            <span class="badge bg-warning text-dark">Scheduled</span>
                                        }
                                        else if (status == "Completed")
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else if (status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                        else if (status == "NoShow")
                                        {
                                            <span class="badge bg-secondary">No Show</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (appointment.Fee > 0)
                                        {
                                            @appointment.Fee.ToString("C")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Free</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle"></i> No appointments found for this doctor.
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    @if (Model.IsConfirmed == WebApplication1.Models.ConfirmationStatus.Pending)
    {
        <div class="mt-4">
            <button type="button"
                    class="btn btn-success btn-lg"
                    onclick="confirmAction(@Model.DoctorId, 'confirm')">
                <i class="fas fa-check"></i> Approve Doctor
            </button>
            <button type="button"
                    class="btn btn-danger btn-lg"
                    onclick="confirmAction(@Model.DoctorId, 'reject')">
                <i class="fas fa-times"></i> Reject Doctor
            </button>
        </div>
    }
</div>

<!-- Hidden Forms -->
<form id="confirmForm" method="post" action="@Url.Action("ConfirmDoctor", "Admin")" style="display: none;">
    <input type="hidden" id="confirmId" name="id" />
</form>

<form id="rejectForm" method="post" action="@Url.Action("RejectDoctor", "Admin")" style="display: none;">
    <input type="hidden" id="rejectId" name="id" />
</form>

<script>
    function confirmAction(id, action) {
        var message = action === 'confirm'
            ? 'Are you sure you want to approve this doctor?'
            : 'Are you sure you want to reject this doctor?';

        if (confirm(message)) {
            if (action === 'confirm') {
                document.getElementById('confirmId').value = id;
                document.getElementById('confirmForm').submit();
            } else {
                document.getElementById('rejectId').value = id;
                document.getElementById('rejectForm').submit();
            }
        }
    }
</script>
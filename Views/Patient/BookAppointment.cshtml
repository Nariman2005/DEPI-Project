@model WebApplication1.Models.Appointment
@{
    ViewData["Title"] = "Book Appointment";
    var patient = ViewBag.Patient as WebApplication1.Models.Patient;
    var specializations = ViewBag.Specializations as List<string>;
    var appointmentTypes = ViewBag.AppointmentTypes as List<WebApplication1.Models.AppointmentType>;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-calendar-plus me-2"></i>Book Appointment - @patient?.FirstName @patient?.LastName</h4>
                </div>
                <div class="card-body">
                    <!-- Error/Success Messages -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }

                    <form asp-action="BookAppointment" method="post">
                        <input type="hidden" asp-for="PatientId" value="@patient?.PatientId" />

                        <!-- Step 1: Choose Appointment Type -->
                        <div class="mb-4">
                            <label class="form-label"><strong>1. Choose Appointment Type</strong></label>
                            <div class="row">
                                @foreach (var type in appointmentTypes)
                                {
                                    <div class="col-6">
                                        <div class="card border">
                                            <div class="card-body text-center">
                                                <input type="radio" asp-for="Type" value="@type" id="type_@type" />
                                                <label for="type_@type" class="ms-2">
                                                    @if (type == WebApplication1.Models.AppointmentType.Video)
                                                    {
                                                        <i class="fas fa-video text-info"> Video Consultation</i>
                                                       
                                                                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-user-md text-primary">In - Person Visit</i>
                                                        
                                                                                                }
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Step 2: Choose Specialty -->
                        <div class="mb-4">
                            <label class="form-label"><strong>2. Choose Medical Specialty</strong></label>
                            <select class="form-select" id="specialtySelect">
                                <option value="">Select a specialty...</option>
                                @foreach (var specialty in specializations)
                                {
                                    <option value="@specialty">@specialty</option>
                                }
                            </select>
                        </div>

                        <!-- Step 3: Choose Doctor -->
                        <div class="mb-4" id="doctorSection" style="display: none;">
                            <label class="form-label"><strong>3. Choose Doctor</strong></label>
                            <select asp-for="DoctorId" class="form-select" id="doctorSelect">
                                <option value="">Loading doctors...</option>
                            </select>
                        </div>

                        <!-- Step 4: Doctor & Clinic Confirmation -->
                        <div class="mb-4" id="confirmSection" style="display: none;">
                            <label class="form-label"><strong>4. Confirm Selection</strong></label>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 id="selectedDoctor"></h6>
                                    <p id="selectedClinic"></p>
                                    <p id="selectedFee"></p>
                                </div>
                            </div>
                        </div>

                        <!-- Step 5: Choose Date & Time -->
                        <div class="mb-4" id="dateTimeSection" style="display: none;">
                            <label class="form-label"><strong>5. Choose Date & Time</strong></label>
                            <div class="row">
                                <div class="col-6">
                                    <label>Date</label>
                                    <input asp-for="AppointmentDate" type="date" class="form-control"
                                           min="@ViewBag.MinDate" max="@ViewBag.MaxDate" id="appointmentDate" />
                                </div>
                                <div class="col-6">
                                    <label>Time</label>
                                    <select name="selectedTimeSlot" class="form-select" id="timeSelect">
                                        <option value="">Select date first...</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Step 6: Optional Symptoms -->
                        <div class="mb-4" id="symptomsSection" style="display: none;">
                            <label class="form-label"><strong>6. Symptoms (Optional)</strong></label>
                            <textarea asp-for="Symptoms" class="form-control" rows="3"
                                      placeholder="Describe your symptoms or reason for visit..."></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div id="submitSection" style="display: none;">
                            <button type="submit" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-check me-2"></i>Book Appointment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // When specialty is selected
        $('#specialtySelect').change(function() {
            var specialty = $(this).val();
            if (specialty) {
                loadDoctors(specialty);
                $('#doctorSection').show();
            } else {
                $('#doctorSection, #confirmSection, #dateTimeSection, #symptomsSection, #submitSection').hide();
            }
        });

        // When doctor is selected
        $('#doctorSelect').change(function() {
            var doctorId = $(this).val();
            if (doctorId) {
                showConfirmation();
                $('#confirmSection, #dateTimeSection, #symptomsSection, #submitSection').show();
            } else {
                $('#confirmSection, #dateTimeSection, #symptomsSection, #submitSection').hide();
            }
        });

        // When date is selected
        $('#appointmentDate').change(function() {
            loadTimeSlots();
        });

        function loadDoctors(specialty) {
            $('#doctorSelect').html('<option value="">Loading...</option>');

            $.get('@Url.Action("GetDoctorsBySpecialty", "Patient")', { specialty: specialty })
                .done(function(doctors) {
                    var options = '<option value="">Choose a doctor...</option>';
                    doctors.forEach(function(doctor) {
                        options += '<option value="' + doctor.doctorId + '" ' +
                                  'data-name="' + doctor.name + '" ' +
                                  'data-clinic="' + doctor.clinicName + '" ' +
                                  'data-city="' + doctor.clinicCity + '" ' +
                                  'data-consultation-fee="' + doctor.consultationFee + '" ' +
                                  'data-online-fee="' + doctor.onlineFee + '">' +
                                  doctor.name + ' - ' + doctor.clinicName + '</option>';
                    });
                    $('#doctorSelect').html(options);
                })
                .fail(function() {
                    $('#doctorSelect').html('<option value="">Error loading doctors</option>');
                });
        }

        function showConfirmation() {
            var selected = $('#doctorSelect option:selected');
            var appointmentType = $('input[name="Type"]:checked').val();

            $('#selectedDoctor').text('Doctor: ' + selected.data('name'));
            $('#selectedClinic').text('Clinic: ' + selected.data('clinic') + ', ' + selected.data('city'));

            var fee = appointmentType === '1' ? selected.data('online-fee') : selected.data('consultation-fee');
            $('#selectedFee').text('Fee: ' + fee + ' EGP');
        }

        function loadTimeSlots() {
            var slots = [];
            for (var hour = 9; hour < 17; hour++) {
                for (var min = 0; min < 60; min += 30) {
                    var time = hour.toString().padStart(2, '0') + ':' + min.toString().padStart(2, '0');
                    slots.push('<option value="' + time + '">' + time + '</option>');
                }
            }
            $('#timeSelect').html('<option value="">Choose time...</option>' + slots.join(''));
        }
    });
</script>

<style>
    .card {
        margin-bottom: 1rem;
    }

    .card-body {
        padding: 1rem;
    }

    input[type="radio"] {
        margin-right: 0.5rem;
    }
</style>
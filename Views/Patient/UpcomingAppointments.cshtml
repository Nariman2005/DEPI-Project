@model IEnumerable<WebApplication1.Models.Appointment>

@{
    ViewData["Title"] = "Upcoming Appointments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-primary">Your Schedule</h2>
            <p class="text-muted">Manage your upcoming visits and video consultations.</p>
        </div>
        <a href="@Url.Action("ProfileInfo", new { id = ViewBag.Patient.PatientId })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-calendar-check text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">No upcoming appointments.</h4>
            <p class="mb-4">You are all caught up!</p>
            <button class="btn btn-primary px-4 py-2">Book New Appointment</button>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                // C# Logic to determine styles dynamically
                bool isVideo = item.Type.ToString() == "Video";
                string iconClass = isVideo ? "bi-camera-video-fill" : "bi-hospital-fill";
                string badgeClass = isVideo ? "bg-info text-dark" : "bg-primary";
                string cardBorderClass = isVideo ? "border-info" : "border-primary";

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 border-top border-4 @cardBorderClass">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="badge @badgeClass rounded-pill d-flex align-items-center gap-1">
                                    <i class="bi @iconClass"></i> @item.Type
                                </span>
                                <span class="badge bg-light text-dark border">@item.Status</span>
                            </div>

                            <h4 class="fw-bold mb-0">@item.AppointmentDate.ToString("dddd")</h4>
                            <p class="text-primary fs-5 mb-3">
                                @item.AppointmentDate.ToString("MMM dd")
                                <span class="text-muted">at</span>
                                @DateTime.Today.Add(item.AppointmentTime).ToString("hh:mm tt")
                            </p>

                            <hr class="text-muted opacity-25">

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="bi bi-person-fill fs-4 text-secondary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Doctor</small>
                                    <strong>Dr. @item.Doctor?.FirstName @item.Doctor?.LastName</strong>
                                </div>
                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light rounded-circle p-2 me-3">
                                    <i class="bi bi-geo-alt-fill fs-4 text-secondary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Location</small>
                                    @if (isVideo)
                                    {
                                        <strong>Online Meeting</strong>
                                    }
                                    else
                                    {
                                        <strong>@item.Clinic?.ClinicName</strong>
                                        <br />
                                        <small class="text-muted">@item.Clinic?.City</small>
                                    }
                                </div>
                            </div>

                            @if (isVideo)
                            {
                                <div class="alert alert-light border small text-center">
                                    <i class="bi bi-info-circle"></i> Link activates 10 mins before.
                                </div>
                            }
                            else
                            {
                                <div class="d-grid mb-3">
                                    <button class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-map"></i> Get Directions
                                    </button>
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-white border-top-0 pb-3 px-3">
                            <div class="d-grid gap-2">
                                @if (isVideo && item.Status.ToString() == "Confirmed")
                                {
                                    <button class="btn btn-success">
                                        <i class="bi bi-camera-video"></i> Join Call
                                    </button>
                                }
                                <button class="btn btn-outline-danger btn-sm">Cancel Appointment</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>